<p class="text-green-600"><%= notice %></p>

<% content_for :title, "Tasks" %>

<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Tasks</h1>

  <!-- BotÃ£o para adicionar nova task -->
  <div class="flex justify-end mb-4">
    <%= link_to "New Task", new_task_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition" %>
  </div>

  <!-- Lista de tarefas -->
  <div id="tasks" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @tasks.each do |task| %>
    <div class="bg-gray-900 p-4 rounded-lg shadow-md">
      <%= render task %>
      <p class="mt-2 text-blue-600">
        <%= link_to "Show this task", task, class: "hover:underline" %>
      </p>
    </div>
    <% end %>
  </div>
</div>